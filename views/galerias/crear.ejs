<%- include('../partials/head.ejs') ;%>

<body class="h-100 d-flex flex-column">
    <%- include('../partials/nav'); %>
        <div class="container-fluid py-5 px-md-5 col">
            <header class="d-flex align-items-center justify-content-between">
                <h1>Nueva Imagen</h1>
            </header>
            <main class="col h-100">
                <form class="d-flex flex-column mx-auto gap-3" id='uploadForm' encType="multipart/form-data">
                    <div class="mb-3">
                        <label for="image" class="form-label">Seleccionar Imagen</label>
                        <input type="file" name="image" id="image" class="form-control" accept="image/jpeg, image/png, image/jpg" />
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <button id="btnSubmit" class="btn btn-primary" type='submit'>
                            <span>Subir</span>
                            <div id="spinner" class="spinner-border text-light" role="status" style="display: none;"></div>
                        </button>
                        <span id="statusMessage" class="text-muted"></span>
                    </div>
                    <p id="validationErrors" class="text-danger"></p>
                </form>
            </main>
        </div>
    <%- include('../partials/footer'); %>
    <!-- Incluir el script para la lógica de la página "Nueva Imagen" -->
    <script src="/js/crear.js"></script>
</body>
</html>